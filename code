require 'Pickup'

teams = {
  'Andy': 1,
  'Casey': 5,
  'Ramon': 13,
  'Jake': 89,
  'Chandler': 34,
  'Chris': 2,
  'Klaas': 8,
  'Johnson': 55,
  'Mata': 3,
  'Adj/Steven': 76
}

loop do
  break if teams.empty?

  teams_weighted = Pickup.new @teams
  selection = teams_weighted.pick 1
  puts selection
